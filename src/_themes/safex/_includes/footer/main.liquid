{% assign sitePages = site.pages
  | sort: 'order'
  | where_exp: 'page', 'page.hideInNav != true'
  | where_exp: 'page', 'page.title'
%}

<div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-20">
  <div>
    <img
      src="{{ site.data.info.logo | relative_url }}"
      alt="Safex"
      class="w-[150px] mb-8 brightness-0 invert-[1]"
    >

    <p class="text-white leading-6">{{ site.data.info.description }}</p>
  </div>

  <div>
    <h4 class="text-white text-base uppercase mb-8 tracking-wider font-medium">Szybkie linki</h4>

    <div class="flex flex-row gap-8">
      <ul>
        {% for sitePage in sitePages %}
          <li class="flex py-2 text-xs text-gray-450 relative before:content-['\25B8'] before:pr-5">
            <a class="hover:text-red-500 duration-200 block" href="{{ sitePage.url | relative_url }}">
              {{ sitePage.title }}
            </a>
          </li>
        {% endfor %}
      </ul>

      <ul>
        {% for category in site.categories %}
          <li class="flex py-2 text-xs text-gray-450 relative before:content-['\25B8'] before:pr-5">
            <a class="hover:text-red-500 duration-200 block" href="{{ category.url | relative_url }}">
              {{ category.title }}
            </a>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>

  <div>
    <iframe
      class="w-full h-full border-0 min-h-80"
      src="https://www.google.com/maps/embed/v1/place?q=Safex+Krzysztof+Skodowski,+Potasowa,+Gdynia,+Polska&amp;key=AIzaSyBFw0Qbyq9zTFTd-tUY6dZWTgaQzuU17R8"
    ></iframe>
  </div>
</div>
